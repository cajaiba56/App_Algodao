<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App_Algodao.Usuarios.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login"
    Padding="0,20,0,0">

    <StackLayout
        BackgroundColor="White"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Entry
            x:Name="txtNome"
            FontSize="20"
            Keyboard="Text"
            Placeholder="nome do usuário" />
        <Entry
            x:Name="txtSenha"
            FontSize="20"
            IsPassword="True"
            Keyboard="Text"
            Placeholder="senha" />
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Button
                Clicked="login_Clicked"
                FontSize="20"
                Text="Login" />
            <Button
                Clicked="cancela_Clicked"
                FontSize="20"
                Text="Cancelar" />
        </StackLayout>
    </StackLayout>

</ContentPage>